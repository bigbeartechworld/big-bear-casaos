{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "minimumReleaseAge": "3 days",
  "automerge": true,
  "packageRules": [
    {
      "matchDatasources": "docker",
      "groupName": "guacamole docker images",
      "matchPackageNames": [
        "/^guacamole//"
      ]
    },
    {
      "matchDatasources": "docker",
      "groupName": "vikunja docker images",
      "matchPackageNames": [
        "/^vikunja//"
      ]
    },
    {
      "matchDatasources": "docker",
      "groupName": "immich docker images",
      "matchPackageNames": [
        "/^ghcr\\.io/immich-app//"
      ]
    },
    {
      "matchDatasources": "docker",
      "enabled": false,
      "matchPackageNames": [
        "/^([^\\/]+\\/)?(mysql|mariadb|mongodb|mongo|postgres|redis)(:|$)/"
      ]
    },
    {
      "matchPackageNames": [
        "ghcr.io/immich-app/postgres"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "rocket.chat",
        "ghcr.io/immich-app/immich-machine-learning",
        "ghcr.io/immich-app/immich-server"
      ],
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "ghcr.io/diced/zipline"
      ],
      "matchFileNames": [
        "Apps/zipline/docker-compose.yml"
      ],
      "enabled": false
    }
  ],
  "customManagers": []
}
