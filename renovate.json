{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "datasource": "docker",
      "packagePatterns": ["^guacamole/"],
      "groupName": "guacamole docker images"
    },
    {
      "datasource": "docker",
      "packagePatterns": ["^vikunja/"],
      "groupName": "vikunja docker images"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^README\\.md$"],
      "matchStrings": [
        "^\\|\\s+[^\\s]+\\s+\\|\\s+(?<depName>[^\\s]+)\\s+\\|\\s+(?<currentValue>[^\\s|]+)\\s+\\|"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
